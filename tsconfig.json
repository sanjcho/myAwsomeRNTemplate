{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "skipLibCheck": true,
    "outDir": "./build",
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "build",
    "node_modules",
    "./node_modules",
    "./node_modules/*"
  ],
  "include": [
    "src",
    "typedef"
  ]
}
